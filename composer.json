{
    "name": "induxx/parsable-file-multi-tool",
    "license": "MIT",
    "description": "",
    "authors": [
        {
            "name": "Thijs De Paepe",
            "email": "Thijs.dp@gmail.com"
        }
    ],
    "require": {
        "php": "8.*|7.4.*|7.3.*|7.2.*|7.1.*",
        "ext-json": "*",
        "ext-iconv": "*",
        "ext-xmlwriter": "*",
        "symfony/yaml": "5.*|^4.3|^3.4",
        "beberlei/assert": "^3.3",
        "adhocore/cli": "^0.9.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "symfony/var-dumper": "*",
        "phpunit/phpunit": "~8.3.4",
        "phpstan/phpstan": "*",
        "jangregor/phpstan-prophecy": "*",
        "phpstan/phpstan-beberlei-assert": "^0.12.6"
    },
    "autoload": {
        "psr-4": {
            "Misery\\": "src/"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Misery\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpunit",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 7 src",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 7 tests"
        ],
        "unit-test": [
            "php vendor/bin/phpunit --exclude-group performance"
        ],
        "sa-test": [
            "vendor/bin/phpstan analyse --no-progress --ansi -l 7 src",
            "vendor/bin/phpstan analyse --no-progress --ansi -l 7 tests"
        ]
    }
}
